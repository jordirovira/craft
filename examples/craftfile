// -*- C++ -*-
// Example craft file to build a simple program

#include <craft.h>
#include <packages/boost.h>


void craft( Context& ctx )
{
    // Define a static library
    ctx.static_library( "test_lib" )
            .source( "test_lib_a.cpp test_lib_b.cpp" );

    // Define a program
    ctx.program( "test_program" )
            .source( "main.cpp" )
            .use( "test_lib" )
            .is_default();

    // Set up boost libraries
    packages::boost::craft( ctx,
                            packages::boost::options::static_link
                            );

    // Define a program
    ctx.program( "test_program_boost" )
            .source( "main.cpp" )
            .use( "test_lib" )
            //.use( "boost_system" )
            .is_default();

}

